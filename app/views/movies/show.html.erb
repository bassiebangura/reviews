
<section class="movie-details">
    <div class="details">
    <aside>
    <h4>Movie Fans</h4>
    <% if @fans.present?%>
    <ul class="fans">
        <% @fans.each do |fan| %>   
          <%= link_to fan.name, fan %>
        <% end %>
     </ul>
    <% end %>
    </aside>
        <h1><%= @movie.title %></h1>
        <h2><%= year_of(@movie)%> &bull; <%= @movie.rating%>
        <p>
            <%= @movie.description%>
        </p>
        <table>
            <tr>
                <th>Total Gross:</th>
                <td>
                    <%= format_total_gross(@movie)%>

                </td>
            </tr>
        </table>
            <%= link_to "Write Review", new_movie_review_path(@movie), class: "review"%>

    </div>
</section>

<section>    <%= link_to pluralize(@movie.reviews.size, "review"), movie_reviews_path(@movie), class: "button"%></section>
<% if current_user%>
    <div class="faves">
     <% if @favorite%>
        <%= button_to("♡ Unfave", movie_favorite_path(@movie, @favorite), method: :delete)%>
    <% else %>
        <%= button_to("♥️ Fave", movie_favorites_path(@movie))%>
    <% end %>
        <div class="count">
        <%= @fans.size %>
        </div>
    </div>
<% end %>
<% if current_user_admin? %>
<section class="admin">
    <%= link_to "Edit", edit_movie_path(@movie), class: "button"%>
    <%= button_to "Delete", @movie, class: "button",
        method: :delete,  data: { confirm: "Are you sure?"} %>
</section>
<% end %>